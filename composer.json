{
    "name": "xel/asycn",
    "description": "Rebuild HTTP Server Based on Swoole BASE/PROCESS",
    "type": "library",

    "authors": [
        {
            "name": "bxel07",
            "email": "yogipratama.ut@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Xel\\Async\\": "src/",
            "Xel\\Example\\": "Example/"
        },
        "files": [
            "src/Router/Attribute/Generate/GenerateReflectionClass.php"
        ]
    },

    "require": {
        "php": ">=8.2",
        "nikic/fast-route": "v1.3.0",
        "xel/container": "dev-main",
        "nyholm/psr7": "^1.8",
        "xel/psr7bridge": "0.1.4",
        "psr/http-server-middleware": "^1.0",
      "ext-pdo": "*",
        "xel/orm": "^1.0",
      "ext-openssl": "*",
        "swoole/ide-helper": "@dev"
    },
    "scripts": {
        "analyse": "phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.34"
    }
}
